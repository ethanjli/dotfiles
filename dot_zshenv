# Integrate neovim
export EDITOR="$HOME/.local/share/aquaproj-aqua/bin/nvim"
export VISUAL="$HOME/.local/share/aquaproj-aqua/bin/nvim"

# Integrate aqua
export PATH="${AQUA_ROOT_DIR:-${XDG_DATA_HOME:-$HOME/.local/share}/aquaproj-aqua}/bin:$PATH"
export AQUA_GLOBAL_CONFIG=${AQUA_GLOBAL_CONFIG:-}:${XDG_CONFIG_HOME:-$HOME/.config}/aquaproj-aqua/aqua.yaml
export AQUA_POLICY_CONFIG=${AQUA_POLICY_CONFIG:-}:${XDG_CONFIG_HOME:-$HOME/.config}/aquaproj-aqua/aqua-policy.yaml
