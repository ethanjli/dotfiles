# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]; then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions
if [ -d ~/.bashrc.d ]; then
    for rc in ~/.bashrc.d/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc

# Set up integrations
_bash_integrations() {
  unset -f "$0"
  # Look for host-provided neovim (needed when the host uses musl instead of glibc, e.g. in Alpine Linux)
  if [ $commands[nvim] ]; then
    local nvim_host_path="$(which nvim)"
  fi

  # Set up integrations
  local xdg_config_home="${XDG_CONFIG_HOME:-$HOME/.config}"
  local zsh_configs="${xdg_config_home}/zsh"
  local zsh_integrations="${zsh_configs}/integrations"
  source "${zsh_integrations}/aqua.sh"
  source "${zsh_integrations}/aqua.bash"
  for file in ${zsh_integrations}/flatpak/*.sh(.N); do
    source "$file"
  done
  for file in ${zsh_integrations}/flatpak/*.bash(.N); do
    source "$file"
  done
  for file in ${zsh_integrations}/cli/*.sh(.N); do
    source "$file"
  done
  for file in ${zsh_integrations}/cli/*.bash(.N); do
    source "$file"
  done
}
_bash_integrations
